<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrphonglinh.apptruyencuoi.StoryActivity">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C01100"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_back"/>
        <TextView
            android:id="@+id/txtTopicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/btnZoomOut"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_zoomout"/>
            <ImageView
                android:id="@+id/btnZoomIn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_zoomin"/>
            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_share"/>
            <ImageView
                android:id="@+id/btnFavourite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_favourite"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
